generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  roomId Int @id @default(autoincrement())

  // A room can have many Users connected to it.
  users User[]
}

model Song {
  songId    String     @id
  songLink  String
  playlists Playlist[]
}

model Playlist {
  playlistId   Int    @id @default(autoincrement())
  playlistName String
  songs        Song[]
}

model User {
  userId        Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  username      String   @db.VarChar(80)
  hash          String   @db.VarChar(255)
  connectedRoom Room     @relation(fields: [roomId], references: [roomId])
  roomId        Int
}
